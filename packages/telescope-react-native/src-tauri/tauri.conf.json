{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Telescope",
  "mainBinaryName": "Telescope",
  "version": "3.1.9",
  "identifier": "com.telescope.vip",
  "build": {
    "beforeDevCommand": "yarn web:start",
    "devUrl": "http://localhost:4200",
    "beforeBuildCommand": "yarn web:build",
    "frontendDist": "../dist/apps/telescope-react-native"
  },
  "app": {
    "windows": [
      {
        "fullscreen": false,
        "height": 600,
        "resizable": false,
        "maximizable": false,
        "minimizable": false,
        "title": "Telescope",
        "width": 320
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": false,
      "menuOnLeftClick": true,
      "id": "main"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "Telescope Inc.",
    "externalBin": [
      "sing-box"
    ],
    "resources": [
      "channel.json",
      "geoip.db",
      "geosite.db"
    ],
    "windows": {
      "webviewInstallMode": {
        "type": "embedBootstrapper"
      },
      "nsis": {
        "installMode": "perMachine",
        "displayLanguageSelector": true,
        "installerIcon": "icons/icon.ico",
        "languages": ["SimpChinese", "English"]
      }
    }
  }
}
