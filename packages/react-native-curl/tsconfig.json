{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "jsx": "react",
    "types": ["node"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "lib", "src/__tests__/**/*"]
}
