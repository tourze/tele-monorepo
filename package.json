{
  "name": "@vibe-shell-monorepo/source",
  "version": "0.0.0",
  "packageManager": "yarn@1.22.22",
  "scripts": {
    "clone-project": "node scripts/manage-git-projects.js clone-project",
    "update-project": "node scripts/manage-git-projects.js update-project",
    "sync-project": "node scripts/manage-git-projects.js sync-project",
    "git:push-all": "node scripts/git-sync-all.js push",
    "git:pull-all": "node scripts/git-sync-all.js pull",
    "openspec:validate": "node scripts/openspec-validate.js",
    "openspec:init": "echo 'OpenSpec 已初始化。运行 yarn openspec:validate 可执行验证。'",
    "reinstall": "rimraf node_modules yarn.lock package-lock.json apps/*/node_modules packages/*/node_modules && yarn install",
    "list-projects": "node scripts/list-workspaces.js"
  },
  "private": true,
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/ui": "^3.0.0",
    "autoprefixer": "^9.8.8",
    "eslint": "~8.57.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "jiti": "2.4.2",
    "jsdom": "~22.1.0",
    "markdownlint-cli": "^0.45.0",
    "rimraf": "^6.0.1",
    "tslib": "^2.3.0",
    "typescript": "~5.9.2"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "nohoist": [
      "**/react-native",
      "**/react-native/**",
      "**/@react-native",
      "**/@react-native/**",
      "**/@react-native-*",
      "**/@react-native-*/**",
      "**/@*/*react-native*",
      "**/@*/*react-native*/**",
      "**/@react-navigation",
      "**/@react-navigation/**",
      "**/react-native-*",
      "**/react-native-*/**",
      "**/hermes-engine",
      "**/hermes-engine/**",
      "**/detox",
      "**/detox/**",
      "**/ahooks",
      "**/ahooks/**",
      "**/newrelic-react-native-agent",
      "**/newrelic-react-native-agent/**",
      "**/@antv",
      "**/@antv/**",
      "**/ant-design-*",
      "**/ant-design-*/**",
      "**/@vue",
      "**/@vue/**",
      "**/@vue-*",
      "**/@vue-*/**",
      "**/vue",
      "**/vue/**",
      "**/@tauri-apps",
      "**/@tauri-apps/**",
      "**/@tarojs",
      "**/@tarojs/**",
      "**/globals",
      "**/globals/**"
    ]
  }
}
